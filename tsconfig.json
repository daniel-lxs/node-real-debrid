{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["lib/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
} 